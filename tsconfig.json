{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "typeRoots": ["src/@types", "node_modules/@types"],
    "types" : ["webpack-env", "node"],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/@types/jest"
  ]        
}